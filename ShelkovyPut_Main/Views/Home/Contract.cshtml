    @section Scripts {
        <script>
            document.getElementById('contactForm').addEventListener('submit', function(event) {
                event.preventDefault();

                var formData = new FormData(this);

                fetch('/Home/Submit', {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Thông tin liên lạc đã được gửi thành công!');
                        this.reset();
                    } else {
                        alert('Có lỗi xảy ra khi gửi thông tin liên lạc. Vui lòng thử lại.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Có lỗi xảy ra khi gửi thông tin liên lạc. Vui lòng thử lại.');
                });
            });

        </script>
    }
