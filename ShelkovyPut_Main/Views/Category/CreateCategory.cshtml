@using Application.DTOs.Request.Management;
@model CreateCategoryRequest;

@{
    ViewData["Title"] = "Thêm danh mục";
}

<div class="main-container">
    <section class="space-sm">
        <div class="container">
            <div class="row mb-5">
                <!--end of col-->
            </div>
            <!--end of row-->
            <div class="row flex-md-row card card-md">
                <div class="card-body bg-secondary">
                    <div class="text-center mb-5">
                        <h1 class="h2 mb-2">Thêm mới danh mục</h1>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-6 col-lg-5">
                            <form method="post" asp-action="CreateCategory" enctype="multipart/form-data">
                                <input type="hidden" id="UserId" name="UserId" asp-for="UserId" />
                                <div class="form-row form-group">
                                    <div class="col">
                                        <input asp-for="CategoryName" class="form-control form-control-lg" placeholder="Tên danh mục" />
                                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-row form-group">
                                    <div class="col">
                                        <button class="btn btn-block btn-success btn-lg" type="submit">Thêm</button>
                                    </div>
                                </div>
                            </form>
                            <div class="text-center mt-4">
                                <a href="@Url.Action("Category", "Category")" class="btn btn-secondary btn-lg">Quay lại</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--end of container-->
    </section>
    <!--end of section-->
</div>

<style>
    .main-container {
        background-color: #f8f9fa;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #343a40;
        font-size: 28px;
        font-weight: 600;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        color: #fff;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #fff;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .card {
        margin: 20px 0;
    }

    .card-body {
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }
</style>
